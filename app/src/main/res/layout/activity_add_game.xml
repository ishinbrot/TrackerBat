<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ianshinbro.trackerbat.UI.AddGame">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_HomeTeam_AddGameScreen"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_AwayTeam_AddGameScreen"
        android:layout_alignStart="@+id/layout_AwayTeam_AddGameScreen"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:ems="10"
        android:id="@+id/HomeTeam_AddGameScreen"
        android:hint="@string/VisitorTeam_TxtFld"
 />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_AwayTeam_AddGameScreen"
        android:layout_width="match_parent"
        android:layout_below="@+id/addGame_AddGameScreen"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:hint="@string/HomeTeam_TxtFld"
        android:ems="10"
        android:id="@+id/AwayTeam_AddGameScreen"
        android:layout_centerHorizontal="true" />
    </android.support.design.widget.TextInputLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|textCapWords"
        android:hint="@string/InningNumber_TxtFld"
        android:ems="10"
        android:gravity="bottom"
        android:id="@+id/InningNumber_AddGameScreen"
        android:layout_below="@+id/layout_HomeTeam_AddGameScreen"
        android:layout_alignStart="@+id/layout_HomeTeam_AddGameScreen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addGame_AddGameScreen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"/>
</RelativeLayout>
