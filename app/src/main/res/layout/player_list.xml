<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/playerListLinearLayout"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/PlayerName_PlayerListScreen"
        android:layout_gravity="top|center_vertical"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_toStartOf="@+id/PlayerNumber_PlayerListScreen"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="5dp"
        android:height="50dp" />

    <Space
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/PlayerNumber_PlayerListScreen"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:layout_below="@+id/PlayerName_PlayerListScreen"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/handle_UpdatePlayerButton"
        android:layout_width="?listPreferredItemHeight"
        android:layout_height="match_parent"
        android:hapticFeedbackEnabled="false"
        android:padding="10dp"

        android:src="@drawable/ic_mode_edit"
        android:cropToPadding="false"
        android:scaleType="fitCenter" />

</LinearLayout>